# ==============================================
# Hyyve Platform Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values

# ==============================================
# Supabase Configuration
# ==============================================
# Get these from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

# Supabase project URL (safe to expose to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe to expose to browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (SERVER ONLY - never expose to browser!)
# This key bypasses Row Level Security - use with caution
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==============================================
# Clerk Authentication
# ==============================================
# Get these from your Clerk Dashboard:
# https://dashboard.clerk.com

# Clerk publishable key (safe to expose to browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here

# Clerk secret key (SERVER ONLY - never expose to browser!)
CLERK_SECRET_KEY=sk_test_your-key-here

# Clerk sign-in and sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Optional: Redirect URLs after authentication
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk webhook secret for user sync
# Get this when setting up webhooks in Clerk Dashboard
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# Redis Configuration
# ==============================================
# Redis connection URL for caching and pub/sub
# For Upstash: https://console.upstash.com
# For local: redis://localhost:6379

# Redis URL (supports redis:// and rediss:// for TLS)
REDIS_URL=redis://localhost:6379

# ==============================================
# Langfuse Observability
# ==============================================
# Langfuse for LLM observability and cost tracking
# For self-hosted: https://langfuse.com/docs/deployment/self-host
# For cloud: https://cloud.langfuse.com

# Langfuse public key (from project settings)
LANGFUSE_PUBLIC_KEY=pk_lf_your-public-key

# Langfuse secret key (SERVER ONLY - never expose to browser!)
LANGFUSE_SECRET_KEY=sk_lf_your-secret-key

# Langfuse host URL (for self-hosted instances)
# Leave empty or omit for Langfuse Cloud (https://cloud.langfuse.com)
LANGFUSE_HOST=http://localhost:3001

# ==============================================
# Stripe Billing
# ==============================================
# Stripe for payment processing and subscriptions
# Get these from your Stripe Dashboard:
# https://dashboard.stripe.com/apikeys

# Stripe publishable key (safe to expose to browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Stripe secret key (SERVER ONLY - never expose to browser!)
STRIPE_SECRET_KEY=sk_test_your-secret-key

# Stripe webhook signing secret
# Get this when setting up webhooks in Stripe Dashboard
# https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# Temporal Workflow Configuration
# ==============================================
# Temporal for durable workflow execution
# For local development: https://docs.temporal.io/cli#install

# Temporal server address
TEMPORAL_ADDRESS=localhost:7233

# Temporal namespace (default for local development)
TEMPORAL_NAMESPACE=default

# Task queue for agent workflows
TEMPORAL_TASK_QUEUE=hyyve-agent-tasks

# ==============================================
# Anthropic Claude AI
# ==============================================
# Get your API key from: https://console.anthropic.com
# Claude is the primary LLM for all agent interactions

# Anthropic API key (SERVER ONLY - never expose to browser!)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ==============================================
# Application Configuration
# ==============================================
# Base URL for the application

# App URL (used for redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
