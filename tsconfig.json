{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/*"],
      "@platform/*": ["./packages/@platform/*/src"]
    }
  },
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/@platform/ui" },
    { "path": "./packages/@platform/db" },
    { "path": "./packages/@platform/auth" },
    { "path": "./packages/tsconfig" }
  ],
  "include": [],
  "exclude": ["node_modules", ".next", "tests"]
}
